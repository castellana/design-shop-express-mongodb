<%- include('./partials/head') %>
<%- include('./partials/nav') %>


<section id="detailsSec">
  
    <div class="Buttons">
        <button onclick="toggleHide()" id="editButton">Edit</button>
        <a href="/index/<%=product.id%>/delete" id="deleteButton">Delete</a>
    </div>

    <figure id="product">
        <img src="<%= product.pictureLink %>"" alt="">
        <figcaption>
            <h4 class="fig__link"><%= product.productName %>
            <span class="company"><%= product.company %></span>
        </h3>
            <p class="price">$<%= product.price %></p>
        </figcaption>
    </figure>
    <h4>Product Description:</h4>
    <p><%= product.description %></p>
    <a class="fig__link" href="<%= product.shopLink %>" target="_blank" id="buyButton">Buy Product</a>

   <!-- formulario que se va a abrir con los datos ya escritos por el ususario, y donde Ã©l pueda cambiarlos  -->
        <form action="/details/<%=product.id%>/edit" method="POST" id="myForm" class="hide">
            <input type="text" name="productName" placeholder="Product-name" value="<%= product.productName %>">
            <input type="text" name="pictureLink" placeholder="Url Picture" value="<%= product.pictureLink %>">
            <input type="text" name="company" placeholder="Company" value="<%= product.company %>">
            <input type="number" name="price" placeholder= "Price" value="<%= product.price %>">
            <textarea name="description" id="description" cols="30" rows="6" placeholder="Write your article here..."><%= product.productName %></textarea>
    
            <input type="text" name="shopLink" placeholder="Link-shop" value="<%= product.shopLink %>">
    
            <input type="submit" value="Edit Product">

        </form>

</section>
<%- include('./partials/footer')%>